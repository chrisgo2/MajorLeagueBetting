<%= form_for(user) do |f| %>
  <%= render 'shared/validation', :object => f.object %>
  <table>
    <tbody>
      <tr>
        <td class="label">
          <%= f.label :name %>
        </td>
        <td>
          <%= f.text_field :name %>
        </td>
      </tr>
      <tr>
        <td class="label">
          <%= f.label :email %>
        </td>
        <td>
          <%= f.text_field :email %>
        </td>
      </tr>
      <tr>
        <td class="label">
           <%= f.label :username %>
        </td>
        <td>
          <%= f.text_field :username %>
        </td>
      </tr>
      <tr>
        <td class="label">
          <%= f.label :password %>
        </td>
        <td>
          <%= f.password_field :password %>
        </td>
      </tr>
      <tr>
        <td class="label">
          <%= f.label :password_confirmation, "Confirmation" %>
        </td>
        <td>
          <%= f.password_field :password_confirmation %>
        </td>
      </tr>
    </tbody>
  </table>
  <div class="btn">
    <%= f.submit "Sign up" %>
  </div>
<% end %>