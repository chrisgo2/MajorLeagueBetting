<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag    :application %>
  <%= javascript_include_tag :application %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div id="content">
      <h1>Sign in</h1>
      <% flash.each do |key, value| %>
	<div class="flash <%= key %>"><%= value %></div>
      <% end %>
      <%= yield %>
    </div>
    <div id="footer">
      footer
    </div>
  </div>
</body>

<%= debug(params) if Rails.env.development? %>
</html>